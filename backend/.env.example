# PowerGuard Backend Environment Configuration

# Application
APP_NAME=PowerGuard
APP_VERSION=1.0.0
DEBUG=false

# Database
# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:password@host:5432/powerguard

# For SQLite (development):
USE_SQLITE=true
SQLITE_URL=sqlite+aiosqlite:///./powerguard.db

# CORS - comma-separated origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-frontend.vercel.app

# ML Settings
ANOMALY_THRESHOLD=0.5
ISOLATION_FOREST_CONTAMINATION=0.1
USE_AUTOENCODER=false

# API Settings
API_PREFIX=/api/v1
